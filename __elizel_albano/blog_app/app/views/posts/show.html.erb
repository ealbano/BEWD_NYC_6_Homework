<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<hr>
<h3> Comments </h3>
<% @post.comments.each do |comment| %>
	<p><%= comment.content %></p>
	<br>
<% end %>

<%= render "comments/form" %>
